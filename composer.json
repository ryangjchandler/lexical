{
    "name": "ryangjchandler/lexical",
    "description": "Attribute-driven tokenisation for PHP.",
    "keywords": [
        "ryangjchandler",
        "lexical"
    ],
    "homepage": "https://github.com/ryangjchandler/lexical",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "RyanChandler\\Lexical\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RyanChandler\\Lexical\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
